<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="uk.ac.cam.cl.echo.extrusionfinder.client.ImageCaptureActivity"
             android:orientation="vertical">

    <SurfaceView
        android:id="@+id/cameraPreviewSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <at.markushi.ui.CircleButton
            android:layout_width="64dip"
            android:layout_height="64dip" android:layout_gravity="center_horizontal|bottom"
            app:cb_color="#FAFAFA"
            android:src="@drawable/ic_camera_circle"
            android:id="@+id/captureImageButton"
            app:cb_pressedRingWidth="8dip" android:layout_marginBottom="16dip"/>

</FrameLayout>
